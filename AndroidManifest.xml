<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.android.fibreoptic"
      android:versionCode="1"
      android:versionName="1.0">

<uses-sdk android:minSdkVersion="7" />
<uses-permission android:name="com.android.browser.permission.READ_HISTORY_BOOKMARKS" />

    <application android:icon="@drawable/mainapp" 
                 android:label="@string/app_name">
       
       
       <!-- Splashing Activity  -->          
        <activity android:name=".FibreOpticDictionary"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
      <!-- The default activity of the application; displaying options  -->  
        <activity android:name=".Menu"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.android.fibreoptic.MENU" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <!-- Activity to start for searching word alphabetically  -->
        <activity android:name=".listofword"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.android.fibreoptic.LISTOFWORD" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        
        
        <activity android:name=".listofcategory"
                  android:label="@string/app_name">
                  
            <intent-filter>
                <action android:name="com.android.fibreoptic.LISTOFCATEGORY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
        </activity>
        
        <activity android:name=".history"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.android.fibreoptic.HISTORY" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
       <activity android:name=".favorites"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.android.fibreoptic.FAVORITES" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".TermActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.android.fibreoptic.TERMS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".info"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.android.fibreoptic.INFO" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".amplifier"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.android.fibreoptic.AMPLIFIER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>
</manifest>